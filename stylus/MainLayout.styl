.main-header
	background-color #787D81
	height 72px
	display flex
	flex-direction row
	justify-content center
	color #FFFFFF

.header-info
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	height 72px
	width 992px

	.logo
		flex 1 0 fit-content

	.contact-ul
		flex 1 0 fit-content
		list-style none
		display flex
		padding 0
		margin 0
		& li + li
			margin-left 15px

.main-bg
	position fixed
	background url('./bg-90.jpg')
	background-origin: padding-box;
	background-position: 100% 0%;
	background-repeat: repeat;
	background-size: cover;
	overflow-x hidden
	height 100vh
	width 100vw
	font-size 0.875em
	font-style normal
	font-weight 300
	display flex
	flex-direction row
	justify-content center
	align-items flex-top
	